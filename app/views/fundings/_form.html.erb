<%= form_for(@funding) do |f| %>
<%= f.label :name %>
<%= f.text_field :name, :size => 80 %><BR>
<%= f.label :amount %>
<%= f.number_field :amount %><BR>
<%= f.label :startdate %>
<%= f.text_field  :startdate %><BR>
<%= f.label :enddate %>
<%= f.text_field  :enddate %><BR>
<%= f.label :url %>
<%= f.url_field :url, :size => 80 %><BR>
<%= f.label :description %>
<%= f.text_area :description, :size => 80 %><BR>
<%= f.label :keywords %>
<%= f.text_field :keywords, :size => 80 %><BR>
<%= f.submit %>
<% end %>