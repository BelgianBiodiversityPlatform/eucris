<h3>Countries</h3>
<div class="well">
<% if @tag_cloud_hash != nil %>
	<% @tag_cloud_hash.each_pair do |tag,size| %>
	<%= link_to tag.name, country_path(tag), :title => "#{tag.rocount} research orgunits", :style => "font-size:#{size}px;" %>
	<% end %>
<% end %>
</div>

<table class="table-striped">
<tr>
  <th>Name</th>
  <th>Code</th>
  <th>#Sources</th>
  <th>#Funding Progr.</th>
  <th>#Funding Org.</th>
  <th>#Research Org.</th>
  <th>#Projects</th>
  <th>#People</th>
</tr>
<% @countries.each do |country| %>
	<tr>
	  <td><%= link_to country.name, country %></td>
	  <td><%= country.code %></td>
	  <td><%= country.socount %></td>
	  <td><%= country.fucount %></td>
	  <td><%= country.focount %></td>
	  <td><%= country.rocount %></td>
	  <td><%= country.prcount %></td>
	  <td><%= country.pecount %></td>
	</tr>
<% end %>
</table>


